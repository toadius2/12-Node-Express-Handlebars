<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center" id="top-bar">
      <h1>EXTREME BURGERZ: EAT OR DIE TRYING!</h1>
    </div>

    <div class="col-xs-6 text-center" id="task">
      <div class="row">
        {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="col-xs-9 text-center md-1">
          <pre> {{this.id}}. {{this.burger_name}}</pre>
        </div>
        <div class="col-xs-9 text-center md-1">
          <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-success">DEVOUR IT OR DIE TRYING!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-6 text-center enter_section">
          <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
            <button type="submit" class="btn btn-warning" id="text-enter-button">SUBMIT</button>
          </form>
          <p>Enter in a burger you would like to eat (or see someone else eat after they lose a dare)!</p>
        </div>
      </div>
    </div>

    <div class="col-xs-6 text-center md-1" id="task">
      {{#each burger_data}}
      {{#if this.devoured}}
      <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
      {{/if}}
      {{/each}}
      <br>

    </div>



  </div>
</div>